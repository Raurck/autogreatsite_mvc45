<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Компания "AUTOGREAT"-@ViewData["Title"]</title>
  
        <meta name="description" content="The description of my page" />
</head>
<body>
    <div class="container body-content">
        <div class="row hidden-xs hidden-sm">
            <div class="pull-left col-lg-4 col-md-4">
                <a href="@Url.Action("Index","Home")" class="">
                    <img class="" src="~/Content/Images/logo_header.png" />
                </a>
            </div>
            <div class="pull-right col-lg-8 col-md-8 header-text text-right">
                <span class="glyphicon glyphicon-pushpin"></span>
                <span><strong>Екатеринбург, ул. Автомагистральная, 12</strong></span><br />
                <a href="tel:+7-908-630-0008" id="header_phone" class="inactive">
                    <span class=" glyphicon glyphicon-phone"></span>
                    <span>
                        <strong>
                            +7 908 630 00 08
                        </strong>
                    </span>
                </a>
            </div>
        </div>
    </div>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="hidden-lg hidden-md">
                    <a href="@Url.Action("Index","Home")" class="navbar-brand navbar-brand-slim"><img alt="AVTOGREAT" src="~/images/logo_100_30.png" class="img-thumbnail img-responsive nav-image" /></a>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                    <li>@Html.ActionLink("Каталог", "Index", "Cars")</li>
                    <li>@Html.ActionLink("Кредит", "Credit", "Home")</li>
                    <li>@Html.ActionLink("Trade-in", "TradeIn", "Home")</li>
                    <li>@Html.ActionLink("Выкуп", "Buy", "Home")</li>
                    <li>@Html.ActionLink("О нас", "About", "Home")</li>
                    <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                    <li class="partialContent" data-url="Roles/RoleMenuItem">...</li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">


        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2015 - Компания AVTOGREAT</p>
        </footer>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryajax")
  
    @Styles.Render("~/Content/css")

    @RenderSection("scripts", required: false)


</body>

</html>
